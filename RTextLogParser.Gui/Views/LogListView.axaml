<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RTextLogParser.Gui.ViewModels"
             xmlns:v="using:RTextLogParser.Gui.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RTextLogParser.Gui.Views.LogListView">

    <Design.DataContext>
        <vm:LogListViewModel />
    </Design.DataContext>

    <StackPanel>
        <ListBox Items="{Binding LogsViewModels}" VirtualizationMode="Simple"
                 Height="{Binding $parent[StackPanel].Bounds.Height}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <v:SingularLogView />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>