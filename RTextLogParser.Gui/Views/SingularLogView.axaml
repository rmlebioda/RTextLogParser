<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RTextLogParser.Gui.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="100"
             x:Class="RTextLogParser.Gui.Views.SingularLogView">

    <Design.DataContext>
        <vm:SingularLogViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="Svg.Expand">
            <!-- <Setter Property="def" Value="White"/> -->
        </Style>
    </UserControl.Styles>

    <ScrollViewer IsVisible="{Binding !IsHidden}">
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="100">
                <Svg Grid.Column="1" Path="/Assets/chevron-up-solid.svg" Classes="Expand"
                     IsVisible="{Binding !IsExpanded}" VerticalAlignment="Top" />
                <Svg Grid.Column="1" Path="/Assets/chevron-down-solid.svg" Classes="Expand"
                     IsVisible="{Binding IsExpanded}" VerticalAlignment="Top" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>